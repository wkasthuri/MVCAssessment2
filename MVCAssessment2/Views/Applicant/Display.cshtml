@model IEnumerable<MVCAssessment2.Models.Combined>

    <div class="border rounded my-3">
    <h2 class="text-center mx-auto my-3">Applicants</h2>

    
    @using (Html.BeginForm("Display", "Applicant", FormMethod.Get))
    {
        <div class="mb-3">
            <input type="text" name="searchFirstName" id="searchFirstName" class="form-control">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    }
  
    <table class="table table-striped mb-0 border="1">

        <tr>
            <th>@Html.DisplayNameFor(m=>m.applicant.firstName)</th>
            <th>@Html.DisplayNameFor(m=>m.applicant.lastName)</th>
            @*<th>@Html.DisplayNameFor(m=>m.applicant.dateOfBirth)</th>*@
            <th>@Html.DisplayNameFor(m=>m.aspNetUsers.Email)</th>
            <th>@Html.DisplayNameFor(m=>m.aspNetUsers.PhoneNumber)</th>
            <th>@Html.DisplayNameFor(m=>m.universities.universityName)</th>
            <th>@Html.DisplayNameFor(m=>m.courses.courseName)</th>
            <th>@Html.DisplayNameFor(m=>m.applicant.gpa)</th>
            @*<th>@Html.DisplayNameFor(m=>m.applicant.coverLetter)</th>*@
            <th></th>
        </tr>

        @foreach (var v in Model)
        {
            <tr class="align-baseline">
                <td>@v.applicant.firstName</td>
                <td>@v.applicant.lastName</td>
                @*<td>@v.applicant.dateOfBirth</td>*@
                <td>@v.aspNetUsers.Email</td>
                <td>@v.aspNetUsers.PhoneNumber</td>
                <td>@v.universities.universityName</td>
                <td>@v.courses.courseName</td>
                <td>@v.applicant.gpa</td>
                @*<td>@v.applicant.coverLetter</td>*@

                <td>
                    <button type="submit" class="btn btn-primary justify-content-center my-2 mx-auto">
                        @Html.ActionLink("View", "DisplayOne", "Applicant", new {@applicantID= v.applicant.applicantID}, new {@class= "text-light text-decoration-none"})
                    </button>
                </td>

            </tr>
        }

    </table>
</div>

<script>
    function ConfirmDelete() {
        alert("Do you want to delete this applicant?");
    }

</script>

