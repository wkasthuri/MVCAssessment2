@model MVCAssessment2.ViewModels.LoginViewModel

<div class="row justify-content-center m-3">

    <div class="col-md-5 border rounded">

        <h3 class="text-center mx-auto mt-3">Sign In</h3>

        <form method="POST">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="my-2">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control" />
            </div>

            <div class="my-2">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" class="form-control" />
            </div>

            @*<button type="submit" class="btn btn-primary my-2">Login</button>*@

            <p class="text-center mx-auto mt-3">Haven't created an account? Sign up below!<p />
            
            <div class="mx-auto" style="width: 180px">
                <a class="btn btn-primary my-2" style="width: 180px" href="@Url.Action("Register", "Account")">Register</a>
            </div>

            <div class="mx-auto" style="width: 180px">
                <button type="submit" class="btn btn-primary my-2" style="width: 180px">Login</button>
            </div>
        </form>

    </div>

</div>
