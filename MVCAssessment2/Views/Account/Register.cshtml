@model MVCAssessment2.ViewModels.RegisterViewModel
<head>
    <link rel="stylesheet" href="~/css/jovan_styles.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

</head>

<div class="row">
    <div class= "justify-content-center">

    <div class="col-md-12">

        <div class="jovan-styling">
        <div class="card centered-form">
        <form method="post">

        
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-control">
                <label asp-for="Email"></label>
                <input asp-for="Email" id="id1" class="form-control" />
                <span asp-validation-for="Email" class="text-danger" />
            </div>

            <div class="form-control">
                <label asp-for="Password"></label>
                <input asp-for="Password" id="id1" class="form-control" />
                <span asp-validation-for="Password" class="text-danger" />
            </div>

            <div class="form-control">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" id="id1" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger" />
            </div>

            <button type="submit" class="btn btn-primary">Register</button>

        </form>
        </div>
        </div>
        </div>
    </div>

</div>

<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

